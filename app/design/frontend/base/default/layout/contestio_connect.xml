<?xml version="1.0"?>
<layout version="0.1.0">
    <contestio_connect_index_index>
        <update handle="page_one_column"/>

        <reference name="head">
            <action method="setTitle">
                <title helper="contestio_connect/meta::getTitle" />
            </action>
            <action method="setDescription">
                <description helper="contestio_connect/meta::getDescription" />
            </action>
            <action method="addLinkRel">
                <rel>canonical</rel>
                <href helper="contestio_connect/meta::getCanonical" />
            </action>
            <block type="contestio_connect/react" name="contestio_meta_tags" template="contestio/meta_tags.phtml" before="-" cacheable="false" />
            <action method="addItem"><type>skin_js</type><name>js/contestio.js</name></action>
        </reference>

        <reference name="content">
            <block type="contestio_connect/react" name="contestio_react" template="contestio/react.phtml" cacheable="false"  />
        </reference>
    </contestio_connect_index_index>
</layout>
